    <div class="across">
      <div class="s-label">Make</div>
      <div class="data"><%= form.text_field :make, id: :vehicle_make %></div>
    </div>

    <div class="across">
      <div class="s-label">Model</div>
      <div class="data"><%= form.text_field :model, id: :vehicle_model %></div>
    </div>

    <div class="across">
      <div class="s-label">Colour</div>
      <div class="data"><%= form.text_field :colour, id: :vehicle_colour %></div>
    </div>

    <div class="across">
      <div class="s-label">Charger kw/h</div>
      <div class="data"><%= form.text_field :charger_kwh, id: :vehicle_charger_kwh %></div>
    </div>

    <div class="across">
      <div class="s-label">Drivers licence number</div>
      <div class="data"><%= form.text_field :drivers_licence_number, id: :vehicle_drivers_licence_number %></div>
