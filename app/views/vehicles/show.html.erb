
<div class="vehicles flex-main">
  <div class="down">
    <div class="item">
      <% if @vehicle.image.present? %>
        <%= image_tag @vehicle.image_url(:original), size: '300x210', alt: "vehicle photo" %>
      <% else %>
        No photo
      <% end %>
    </div>

    <div class="across">
      <div class="item">Licence plate:</div>
      <div class="item val"><%= @vehicle.licence_plate %></div>
    </div>

    <div class="across">
      <div class="item">Make:</div>
      <div class="item val"><%= @vehicle.make %></div>
    </div>

    <div class="across">
      <div class="item">Model:</div>
      <div class="item val"><%= @vehicle.model %></div>
    </div>

    <div class="across">
      <div class="item">Colour:</div>
      <div class="item val"><%= @vehicle.colour %></div>
    </div>

    <div class="across">
      <div class="item">Charger kwh:</div>
      <div class="item val"><%= @vehicle.charger_kwh %></div>
    </div>

    <div class="across">
      <div class="item">Drivers licence:</div>
      <div class="item val"><%= @vehicle.drivers_licence_number %></div>
    </div>

    <div class="across">
      <div class="item"><%= link_to 'Edit', edit_vehicle_path(@vehicle), class: 'btn btn-warning' %></div>
      <div class="item"><%= link_to 'Back', vehicles_path, class: 'btn btn-success' %></div>
    </div>
  </div>

  <div class="item f3"></div>
</div>