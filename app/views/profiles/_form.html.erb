
<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="profiles">
    <div class="field">
      <%= form.label :image %>
      <%= form.file_field :image, id: :profile_image %>
    </div>

    <div class="field">
      <%= form.label :first_name %>
      <%= form.text_field :first_name, id: :profile_first_name %>
    </div>

    <div class="field">
      <%= form.label :last_name %>
      <%= form.text_field :last_name, id: :profile_last_name %>
    </div>

    <div class="field">
      <%= form.label :street_number %>
      <%= form.text_field :street_number, id: :profile_street_number %>
    </div>

    <div class="field">
      <%= form.label :street %>
      <%= form.text_field :street, id: :profile_street %>
    </div>

    <div class="field">
      <%= form.label :city %>
      <%= form.text_field :city, id: :profile_city %>
    </div>

    <div class="field">
      <%= form.label :postcode %>
      <%= form.text_field :postcode, id: :profile_postcode %>
    </div>

    <div class="field">
      <%= form.label :state %>
      <%= form.text_field :state, id: :profile_state %>
    </div>

    <div class="actions">
      <%= form.submit class: 'btn btn-warning' %>
    </div>
  </div>
<% end %>
