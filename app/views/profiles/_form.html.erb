
<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being
        saved:</h2>

      <ul>
        <% profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="s-table">
    <div class="across">
      <div class="s-label">Image</div>
      <div class="data f2"><%= form.file_field :image, id: :profile_image %></div>
    </div>

    <div class="across">
      <div class="s-label">First name</div>
      <div class="data f2"><%= form.text_field :first_name, id: :profile_first_name %></div>
    </div>

    <div class="across">
      <div class="s-label">Last name</div>
      <div class="data f2"><%= form.text_field :last_name, id: :profile_last_name %></div>
    </div>

    <%= render 'layouts/address_form', form: form %>

  </div>
  <br/>
  <div class="actions">
    <%= form.submit class: 'btn btn-warning' %>

<% end %>
